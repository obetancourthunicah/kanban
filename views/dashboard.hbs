<div class="container-fluid">
    <div="row">
        <div class="col-sm-2 col-lg-2 sidebar">
            <ul class="nav nav-sidebar" id="sidebar">

            </ul>
        </div>
        <div class="col-sm-10 col-sm-offset-2 col-lg-offset-2 col-lg-10 main">
            <div class="row">
                <div class="col-sm-4 proyectTitle">

                </div>
                <div clas="col-sm-8" style="overflow-auto">
                    <a class="btn btn-default pull-right text-right"><span class="glyphicon glyphicon-wrench"></span></a>
                    <a class="btn btn-default pull-right text-right" id="btnAddTarjeta"><span class="glyphicon glyphicon-plus"></span></a>
                </div>
                <hr />
            </div>
            <div class="row" id="prcContainer">

            </div>
        </div>
        <div class="col-sm-4 col-lg-4 sidebarRight hide">
            <div class="close">
                <div></div>
                <div></div>
            </div>
            <h2>Nueva Tarjeta</h2>
            <hr/>
            <form>
                <div class="form-group">
                    <label for="txtTitulo">Título</label>
                    <input type="text" class="form-control" id="txtTitulo" placeholder="Título" name="txtTitulo">
                </div>
                <div class="form-group">
                    <label for="txtDescripcion">Descripción</label>
                    <textarea name="txtDescripcion" id="txtDescripcion" class="form-control" rows=4></textarea>
                </div>

                <button id="addNewTarjeta" class="btn btn-primary btn-block">Guardar</button>
            </form>

        </div>
        <div class="col-sm-12 col-lg-12 sidebarRightProyect hide">
            <div class="closeProyect">
                <div></div>
                <div></div>
            </div>
            <h2>Nuevo Proyecto</h2>
            <hr/>
            <div class="row">
                <div class="col-sm-4 col-sm-offset-1">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="txtProyecto">Proyecto</label>
                            <input type="text" class="form-control" id="txtProyecto" placeholder="Nombre del Proyecto" name="txtProyecto">
                        </div>
                        <div class="form-group">
                            <label for="txtFase1">Fases</label>
                            <input type="text" class="form-control" id="txtFase1" placeholder="Nombre de la Fase 1" name="txtFase1">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="txtFase2">Fase 2</label>
                            <input type="text" class="form-control" id="txtFase2" placeholder="Nombre de la Fase 2" name="txtFase2">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="txtFase3">Fase 3</label>
                            <input type="text" class="form-control" id="txtFase3" placeholder="Nombre de la Fase 3" name="txtFase3">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="txtFase4">Fase 4</label>
                            <input type="text" class="form-control" id="txtFase4" placeholder="Nombre de la Fase 4" name="txtFase4">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="txtFase5">Fase 5</label>
                            <input type="text" class="form-control" id="txtFase5" placeholder="Nombre de la Fase 5" name="txtFase5">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="txtFase6">Fase 6</label>
                            <input type="text" class="form-control" id="txtFase6" placeholder="Nombre de la Fase 6" name="txtFase6">
                        </div>
                        <div class="text-right">
                            <button id="addNewProyect" class="btn btn-primary">Guardar</button>
                        </div>

                    </form>
                </div>
                <div class="col-sm-4 col-sm-offset-2">
                    <form class="form-horizontal">
                        <label for="txtColaborador">Colaboradores</label>
                        <div class="input-group">
                            <input type="email" class="form-control" id="txtColaborador" placeholder="Agregar Correo del Colaborador" name="txtColaborador"/>
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-default">Editor</button>
                                <button type="button" class="btn btn-default">Lector</button>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                             <span class="col-sm-12">
                                María del Pilar
                                <a class="pull-right"><span class="glyphicon glyphicon-remove"></span></a>
                            </span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
</div>
</div>
